/* components/userTabbar/userTabbar.wxss */
.uid-tabBar{
  width: 100%;
  padding:10rpx;
  background-color: white;
  display: flex;
  position: fixed;
}
.uid-tabbarBottom{
  bottom: 0;
}
.uid-tabbarTop{
  top: 0;
}
.uid-tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}
.uid-borderBottom{
  bottom: 0;
}
.uid-borderTop{
  top: 0;
}
.uid-tabBar-item{
  flex:1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.uid-picIcon{
  width: 54rpx;
  height: 54rpx;
}
.uid-iconSize{
  font-size: 48rpx;
}